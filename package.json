{
  "name": "thelocalcollaborative.com",
  "description": "tlc.com and biz.tlc.com",
  "author": "Steven Klein <steven.p.klein@gmail.com>",
  "version": "0.0.7",
  "private": true,
  "scripts": {
    "build": "npm-run-all --serial clean --parallel copy js css templates",
    "build:prod": "cross-env NODE_ENV=production run-s build",
    "clean": "del-cli docs",
    "copy": "npm-run-all --parallel copy:**",
    "copy:img": "cpx \"src/assets/img/**/*.{jpg,jpeg,gif,png,svg}\" docs/assets/img",
    "copy:htaccess": "cpx src/.htaccess docs",
    "copy:favicon": "cpx src/favicon.ico docs",
    "copy:fontawesome": "cpx \"node_modules/font-awesome/fonts/**/*\" docs/assets/fonts",
    "css": "postcss -c build/postcss.config.js",
    "js": "rollup -c build/rollup.config.js",
    "version": "npm run build:prod && git add -A",
    "postversion": "git push origin master && git push --tags",
    "serve": "browser-sync start -c build/browsersync.config.js",
    "test": "npm run build:prod",
    "templates": "node build/metalsmith.config.js",
    "watch": "npm-run-all build --parallel \"js -- --watch\" \"css -- --watch\" \"copy:img -- --watch\" \"templates -- --watch\" serve"
  },
  "devDependencies": {
    "browser-sync": "^2.18.5",
    "cpx": "^1.5.0",
    "cross-env": "^3.1.4",
    "cssnano": "^3.9.1",
    "del-cli": "^0.2.1",
    "dotenv": "^4.0.0",
    "handlebars": "^4.0.10",
    "metalsmith": "^2.3.0",
    "metalsmith-html-minifier": "^2.2.0",
    "metalsmith-if": "^0.1.1",
    "metalsmith-layouts": "^1.8.1",
    "metalsmith-markdown": "^0.2.1",
    "metalsmith-permalinks": "^0.5.0",
    "metalsmith-watch": "^1.0.3",
    "npm-run-all": "^4.0.0",
    "postcss": "^5.2.8",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "postcss-reporter": "^3.0.0",
    "rollup": "^0.39.2",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.1.0",
    "yargs": "^8.0.2"
  },
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "font-awesome": "^4.7.0",
    "milligram-cssnext": "^1.0.1",
    "normalize-css": "^2.3.1"
  }
}
